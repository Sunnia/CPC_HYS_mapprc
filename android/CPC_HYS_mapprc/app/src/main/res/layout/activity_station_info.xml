<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.mapprc.StationInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/station_info_name_title"
        android:id="@+id/name_title_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/station_info_address_title"
        android:id="@+id/address_title_textview"
        android:layout_below="@+id/name_title_textView"
        android:layout_alignLeft="@+id/name_title_textView"
        android:layout_alignStart="@+id/name_title_textView"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="導航"
        android:id="@+id/buttonnavigate"
        android:onClick="start_navagate"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/name_textView"
        android:layout_alignTop="@+id/name_title_textView"
        android:layout_toRightOf="@+id/address_title_textview"
        android:layout_above="@+id/address_textview"
        android:layout_alignRight="@+id/buttonnavigate"
        android:layout_alignEnd="@+id/buttonnavigate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/address_textview"
        android:layout_alignTop="@+id/address_title_textview"
        android:layout_alignLeft="@+id/name_textView"
        android:layout_alignStart="@+id/name_textView" />
</RelativeLayout>
